%% -*- erlang -*-
{erl_opts, [
    inline_list_funcs,
    warn_unused_vars,
    warn_export_all,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_bif_clash,
    warn_unused_record,
    warn_deprecated_function,
    warn_obsolete_guard,
    strict_validation,
    warn_export_vars,
    warn_exported_vars,
    warn_export_all,
    debug_info,
    warnings_as_errors
]}.

{cover_enabled, true}.

{cover_opts, [verbose]}.

{cover_print_enabled, true}.

% {eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"."}]}}, event_log]}.

{deps, [
    {lhttpc, {git, "https://github.com/ferd/lhttpc.git", {tag, "1.2.9"}}},
    {jiffy, "1.0.1"},
    {erliam, {git, "https://github.com/AdRoll/erliam.git", {tag, "v0.2.0"}}}
 ]}.

{xref_checks,[
    undefined_function_calls,
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.

{dialyzer, [
    {warnings, [no_return, error_handling]},
    {plt_apps, top_level_deps},
    {plt_extra_apps, []},
    {plt_location, local},
    {base_plt_apps, [erts, stdlib, kernel]},
    {base_plt_location, global}
]}.

{profiles, [{test, [{deps, [{meck, "0.8.13"}]}]}]}.

{alias, [{test, [xref, dialyzer, lint, eunit, cover]}]}.

{plugins, [{rebar3_lint, "0.1.10"}]}.

