%% -*- erlang -*-
{erl_opts, [
    inline_list_funcs,
    warn_unused_vars,
    warn_export_all,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_bif_clash,
    warn_unused_record,
    warn_deprecated_function,
    warn_obsolete_guard,
    strict_validation,
    warn_export_vars,
    warn_exported_vars,
    warn_export_all,
    debug_info,
    warnings_as_errors
]}.

{minimum_otp_vsn, "21"}.

{cover_enabled, true}.

{cover_opts, [verbose]}.

{cover_print_enabled, true}.

{deps, [
    {lhttpc, {git, "https://github.com/ferd/lhttpc.git", {tag, "1.2.9"}}},
    {jiffy, "1.0.5"},
    {erliam, {git, "https://github.com/AdRoll/erliam.git", {tag, "v0.3.0"}}},
    {b64fast, "0.2.2"}
 ]}.

{xref_checks,[
    undefined_function_calls,
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.

{dialyzer, [
    {warnings, [no_return, error_handling]},
    {plt_apps, top_level_deps},
    {plt_extra_apps, []},
    {plt_location, local},
    {base_plt_apps, [erts, stdlib, kernel]},
    {base_plt_location, global}
]}.

{profiles, [{test, [{deps, [{meck, "0.9.0"}]}]}]}.

{alias, [{test, [format, lint, xref, dialyzer, eunit, cover, edoc]}]}.

{plugins, [
    {rebar3_format, "~> 0.6.0"},
    rebar3_lint,
    rebar3_hex
]}.

{format, [{files, ["src/*.erl", "test/*.erl", "include/*.hrl"]}]}.


