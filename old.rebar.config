 [
  {lhttpc, ".*",
    {git, "https://github.com/ferd/lhttpc.git", {tag, "1.2.9"}}},
  {jiffy, ".*",
    {git, "https://github.com/davisp/jiffy.git", {tag, "0.15.2"}}},
  {meck, ".*",
    {git, "https://github.com/eproxus/meck.git", {tag, "0.8.11"}}},
  {erliam, ".*",
    {git, "https://github.com/AdRoll/erliam.git", {tag, "v0.1.2"}}}
 ]}.
